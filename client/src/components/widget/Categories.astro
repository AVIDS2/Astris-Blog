---
/**
 * 分类侧边栏组件 - 从 API 获取分类列表
 */
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import { fetchCategories, type ApiCategory } from "../../utils/api-client";
import { widgetManager } from "../../utils/widget-manager";
import ButtonLink from "../control/ButtonLink.astro";
import WidgetLayout from "./WidgetLayout.astro";

// 从 API 获取分类
let categories: { name: string; count: number; url: string }[] = [];

try {
    const apiCategories = await fetchCategories();
    categories = apiCategories.map(c => ({
        name: c.name,
        count: c.post_count,
        url: `/archive/?category=${encodeURIComponent(c.name)}`,
    }));
} catch (e) {
    console.error('Failed to fetch categories:', e);
}

const COLLAPSED_HEIGHT = "7.5rem";

// 使用统一的组件管理器检查是否应该折叠
const categoriesComponent = widgetManager
	.getConfig()
	.components.find((c) => c.type === "categories");
const isCollapsed = categoriesComponent
	? widgetManager.isCollapsed(categoriesComponent, categories.length)
	: false;

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---

<WidgetLayout name={i18n(I18nKey.categories)} id="categories" isCollapsed={isCollapsed} collapsedHeight={COLLAPSED_HEIGHT}
                class={className} style={style}
>
    {categories.length > 0 ? (
        categories.map((c) =>
            <ButtonLink
                url={c.url}
                badge={String(c.count)}
                label={`View all posts in the ${c.name.trim()} category`}
            >
                {c.name.trim()}
            </ButtonLink>
        )
    ) : (
        <p class="text-sm text-gray-400">暂无分类</p>
    )}
</WidgetLayout>